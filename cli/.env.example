# ZCLAIM CLI Configuration
# Copy this to .env and fill in your values

# =============================================================================
# Starknet Configuration
# =============================================================================

# Network: mainnet, sepolia, or custom RPC URL
STARKNET_NETWORK=sepolia

# Your Starknet account address
STARKNET_ACCOUNT=0x...

# Path to account keystore file (created with starkli)
STARKNET_KEYSTORE=~/.starkli-wallets/deployer/keystore.json

# =============================================================================
# Contract Addresses (deployed on Starknet)
# =============================================================================

# wZEC token contract
WZEC_TOKEN_ADDRESS=0x...

# Relay system contract
RELAY_SYSTEM_ADDRESS=0x...

# Vault registry contract
VAULT_REGISTRY_ADDRESS=0x...

# ZCLAIM bridge contract
ZCLAIM_BRIDGE_ADDRESS=0x...

# =============================================================================
# Zcash Configuration
# =============================================================================

# Zcash RPC endpoint
ZCASH_RPC_URL=http://localhost:8232

# Zcash RPC credentials
ZCASH_RPC_USER=zcash
ZCASH_RPC_PASSWORD=your-password

# Your Zcash shielded address (for receiving ZEC)
ZCASH_SHIELDED_ADDRESS=zs1...

# =============================================================================
# Optional Settings
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Confirmation requirements
ZCASH_CONFIRMATIONS=20
