# zarklink CLI Configuration
# Copy this to .env and fill in your values

# =============================================================================
# Starknet Configuration
# =============================================================================

# Network: mainnet, sepolia, or custom RPC URL
STARKNET_NETWORK=sepolia
STARKNET_RPC_URL=https://starknet-sepolia.g.alchemy.com/starknet/version/rpc/v0_10/KKX3txNscJJ_3JAPqQ3E7

# Your Starknet account address
STARKNET_ACCOUNT_ADDRESS=0x...

# Your Starknet private key
STARKNET_PRIVATE_KEY=0x...

# =============================================================================
# Contract Addresses (deployed on Starknet Sepolia)
# =============================================================================

# wZEC token contract
TOKEN_ADDRESS=0x04c571b6ca21e59add5ccb280eb68a309c6ca4e5eeecfd2186856fe97f74a294

# Relay system contract
RELAY_ADDRESS=0x01ae3dce889773db25632ebed4a04698fb2dff1c71b2101f00e8c0f34b5d7e4b

# Vault registry contract
REGISTRY_ADDRESS=0x007abd698ddafea4669ac4d5e96477ef4958b6e6ebd57e4ef2f61df1f2597436

# =============================================================================
# Zcash Configuration
# =============================================================================

# Zcash RPC endpoint (zcashd JSON-RPC)
ZCASH_RPC_URL=http://127.0.0.1:8232

# Zcash RPC credentials
ZCASH_RPC_USER=
ZCASH_RPC_PASSWORD=

# Your Zcash shielded address (for receiving ZEC)
ZCASH_SHIELDED_ADDRESS=zs1...

# =============================================================================
# Bridge Settings
# =============================================================================

# Minimum confirmations before accepting Zcash tx
MIN_CONFIRMATIONS=20

# Timeout for issue protocol (seconds)
ISSUE_TIMEOUT=86400

# Timeout for redeem protocol (seconds)
REDEEM_TIMEOUT=86400

# Fee rate (basis points, 10 = 0.1%)
FEE_RATE=10

# Log level: debug, info, warn, error
LOG_LEVEL=info
